{
	"compilerOptions": {
	  "target": "es2018",
	  "module": "commonjs",
	  "strict": true,
	  "declaration": true,
	  "esModuleInterop": true,
	  "skipLibCheck": true,
	  "forceConsistentCasingInFileNames": true,
	  "outDir": "./build",
	  "rootDir": "./src",
	  "resolveJsonModule": true,
	  "baseUrl": "./",
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "build"]
  }
  